<link rel="stylesheet" href="/stylesheets/searchStyle.css" />

<div id="navBar" class="flex-container">

  <h1 class="flex-box">easytune</h1>


  <form action="/login" method="POST" id="form-container">
    <div class="flex-box">
      <a href="/profile">Profile</a>
      <a href="/logout">Logout</a>
    </div>


    {{#if message}}
    <div class="error-message">{{ message }}</div>
    {{/if}}
    <br><br>

  </form>
</div>

<div class="filter">
  <input type="text" placeholder="filter results"></input>
  <button type="submit">ğŸ”</button>
</div>

<ul id="resultsList" class="container">

  {{#each events}}

  <div class="card mb-3">
    <div class="card-body">
      <h5 class="card-title">{{this.name}}<span>
          <button type="button" class="favourite" id={{ this.id }} onclick="likeThis(this)">â­</button></span></h5>
      <p class="card-text">[ {{this.classifications.[0].genre.name}} ] <br>
        where: {{this._embedded.venues.[0].name}} <br>
        when: {{this.dates.start.localDate}}, {{this.dates.start.localTime}}</p>
      <p class="card-text"><small class="text-muted">Last updated 3 mins ago</small></p>
    </div>
  </div>
  {{else}}

  <div class="card mb-3">
    <div class="card-body">
      <h5 class="card-title">Berlin sleeps - we've found no {{this.classifications.[0].genre.name}} events</h5>
      <p class="card-text"></p>
    </div>
  </div>
  {{/each}}

  <script src="/javascripts/script.js"></script>